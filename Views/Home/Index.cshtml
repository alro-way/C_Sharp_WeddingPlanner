@{
    ViewData["Title"] = "Home Page";
}
@using System.ComponentModel.DataAnnotations;
@using C_Sharp_WeddingPlanner.Models;
@model UserWrapper;

<h1 class="display-4">Welcome</h1>
<div class="row">
    <div class="col mycol">
        <h3>Registration:</h3>
        <form asp-action="Create" asp-controller="Home" method="post">
            <p>
                <label asp-for="NewUser.FirstName">First Name:</label>
            </p>
            <p>
                <input asp-for="NewUser.FirstName" type="text">
            </p>
            <p><span class="valid" asp-validation-for="NewUser.FirstName"></span></p>

            <p>
                <label asp-for="NewUser.LastName">Last Name:</label>
            </p>
            <p>
                <input asp-for="NewUser.LastName" type="text">
            </p>
            <p><span class="valid" asp-validation-for="NewUser.LastName"></span></p>

            <p>
                <label asp-for="NewUser.Email">Email:</label>
            </p>
            <p>
                <input asp-for="NewUser.Email" type="email">
            </p>
            <p><span class="valid" asp-validation-for="NewUser.Email"></span></p>

            <p>
                <label asp-for="NewUser.Password">Password:</label>
            </p>
            <p>
                <input asp-for="NewUser.Password" type="password">
            </p>
            <p><span class="valid" asp-validation-for="NewUser.Password"></span></p>

            <p>
                <label asp-for="NewUser.Confirm">Password confirmation:</label>
            </p>
            <p>
                <input asp-for="NewUser.Confirm" type="password">
            </p>
            <p><span class="valid" asp-validation-for="NewUser.Confirm"></span></p>

            <button>Sing up</button>
        </form>
    </div>

    <div class="col mycol">
        <h3>Login:</h3>
        <form asp-action="LoginUser" asp-controller="Home" method="post">
            <p><label asp-for="NewLogin.LoginEmail">Email:</label></p>
            <p><input asp-for="NewLogin.LoginEmail"></p>
            <p><span class="valid" asp-validation-for="NewLogin.LoginEmail"></span></p>
            
            <p><label asp-for="NewLogin.LoginPassword">Password:</label></p>
            <p><input asp-for="NewLogin.LoginPassword"></p>
            <p><span class="valid" asp-validation-for="NewLogin.LoginPassword"></span></p>
            <p><input type="submit" value="Login"></p>
        </form>
    </div>
    

</div>
