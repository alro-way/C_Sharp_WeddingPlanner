@using C_Sharp_WeddingPlanner.Models;

<div class="container">
    <h3>Plan Your Wedding</h3>
</div>
<br>
<div class="row">
    <div class="col-md-4 col-md-offset-1">
        @model Wedding
        <form asp-action="CreateNewWedding" asp-controller="Home" method="post">
            <div class="form-group">
                <input type="hidden" asp-for="@Model.UserId" value="@ViewBag.UserId">

                <label asp-for="NameOne">Wedder One:</label>
                <input type="text" class="form-control" asp-for="NameOne">
                <span class="valid" asp-validation-for="NameOne"></span>
                
                <label asp-for="NameTwo">Wedder Two:</label>
                <input type="text" class="form-control" asp-for="NameTwo">
                <span class="valid" asp-validation-for="NameTwo"></span>

                <label asp-for="Date">Date:</label>
                <input type="date" class="form-control" asp-for="Date">
                <span class="valid" asp-validation-for="Date"></span>

                <label asp-for="Address">Address:</label>
                <input type="text" class="form-control" asp-for="Address">
                <span class="valid" asp-validation-for="Address"></span>

            </div>
            <br>
            <button type="submit" class="btn btn-info">Create</button>
            <br>
        </form>
    </div>

    <div class="col-md-4 col-md-offset-1">
        <a href="/dashboard">Dashboard</a> |
        <a href="/logout">Log Out</a>
    </div>
</div>